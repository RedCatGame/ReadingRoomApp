<!-- LoginView.xaml (обновленный) -->
<UserControl x:Class="ReadingRoomApp.Views.LoginView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ReadingRoomApp.Views"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Border Width="350" Height="380" 
                Background="White" 
                BorderBrush="#2196F3" 
                BorderThickness="1" 
                CornerRadius="10" 
                Padding="20">
            <StackPanel>
                <TextBlock Text="Вход в систему" 
                           FontSize="24" 
                           FontWeight="Bold" 
                           HorizontalAlignment="Center" 
                           Margin="0,10,0,30"/>

                <TextBlock Text="Имя пользователя:"/>
                <TextBox Text="{Binding Username, UpdateSourceTrigger=PropertyChanged}" 
                         Margin="0,5,0,15"/>

                <TextBlock Text="Пароль:"/>
                <PasswordBox x:Name="PasswordBox" 
                             Margin="0,5,0,15" 
                             PasswordChanged="PasswordBox_PasswordChanged"/>

                <TextBlock Text="{Binding ErrorMessage}" 
                           Foreground="Red" 
                           TextWrapping="Wrap" 
                           Margin="0,0,0,15"/>

                <Button Content="Войти" 
                        Command="{Binding LoginCommand}" 
                        Height="35" 
                        Background="#2196F3" 
                        Foreground="White" 
                        BorderThickness="0" 
                        Margin="0,10,0,20"/>

                <!-- Ссылка на регистрацию -->
                <TextBlock HorizontalAlignment="Center">
                    <Hyperlink Command="{Binding NavigateToRegisterCommand}">
                        Нет аккаунта? Зарегистрироваться
                    </Hyperlink>
                </TextBlock>
            </StackPanel>
        </Border>
    </Grid>
</UserControl>